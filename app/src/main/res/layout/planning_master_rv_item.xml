<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="8dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp">


    <ImageView
        android:id="@+id/imv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:clickable="false"
        android:src="@drawable/restaurant"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toLeftOf="@+id/overflow"
        android:layout_toRightOf="@+id/imv_icon"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_planning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Uang Jalan Jalan"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target "
                android:textSize="14sp" />
            <TextView
                android:id="@+id/target_money"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:text="Rp1.500.000"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Pada "
                android:textSize="14sp" />
            <TextView
                android:id="@+id/target_date"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Juni 2019"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terkumpul "
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_collected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/RedTheme"
                android:text="Rp743.099"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" dimulai "
                android:textSize="14sp" />
            <TextView
                android:id="@+id/DateInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 2001-12-12 "
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_moneyperbulan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/RedTheme"
                android:text="Rp743.099"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/bulan) x "
                android:textSize="14sp" />
            <TextView
                android:id="@+id/target_month_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Bulan"
                android:textSize="14sp" />

        </LinearLayout>




    </LinearLayout>

    <ImageButton
        android:id="@+id/overflow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#00F9F9F9"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_checklist" />

</RelativeLayout>